<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/unicoImageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/unicoFilmeTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/unicoFilmeDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="normal"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/unicoFilmeDataLancamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="left"
            android:textStyle="bold"
            android:drawableStart="@drawable/calendar"
            android:drawablePadding="4dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/unicoFilmeNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="left"
            android:textStyle="bold"
            android:drawableStart="@drawable/star"
            android:drawablePadding="4dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/unicoFilmeNroVotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="left"
            android:textStyle="bold"
            android:drawableStart="@drawable/talent"
            android:drawablePadding="3dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</LinearLayout>